<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="wrap_content"
android:layout_height="@dimen/Message_banner_height">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/ll_MainView"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/White"
        android:clickable="true"
        android:focusable="false"
        app:cardCornerRadius="8dp"
        android:focusableInTouchMode="false"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:padding="10dp">

            <TextView
                android:id="@+id/txtCircularName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/textbg"
                android:textSize="@dimen/txt_size_sixteen" />
            <TextView
                android:id="@+id/txtGroupName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtCircularName"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/textbg"
                android:textSize="@dimen/txt_size_sixteen" />

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/txtGroupName"
                android:layout_marginTop="3dp"
                android:gravity="end"
                android:text=""
                android:textColor="@color/textbg"
                android:textSize="@dimen/txt_size_twelve" />
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>


</RelativeLayout>
</RelativeLayout>